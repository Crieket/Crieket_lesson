---
global:
  scrape_interval: 15s
  

rule_files:
  - "/etc/prometheus/alert.rules.yml"

alerting:
  alertmanagers:
  - static_configs:
    - targets: ['localhost:9093']
    


scrape_configs:
  - job_name: 'node_exporter'
    static_configs:
      - targets: ['192.168.1.61:9100', '192.168.1.51:9100', '192.168.1.10:9100', '192.168.1.31:9100', '192.168.1.32:9100', '192.168.1.41:9100', '192.168.1.42:9100', '192.168.1.51:9100']

  - job_name: 'alertmanager'
    static_configs:
      - targets: ['localhost:9093']