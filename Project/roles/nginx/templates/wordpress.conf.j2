upstream app {
    server 192.168.1.31;
}
 
server {
    listen 80;
    server_name www.kas.local.ru kas.local.ru;
    root /opt/www/wordpress;
    index index.php index.html index.htm;
    return 301 http://$host$request_uri;

  location ~ \.php$ {
    include snippets/fastcgi-php.conf;
    fastcgi_pass app;
  }
}
server {
  listen 443 ssl;
  server_name www.kas.local.ru kas.local.ru;
  root /opt/www/wordpress;
  ssl_certificate /etc/nginx/ssl/kas.local.crt; 
  ssl_certificate_key /etc/nginx/ssl//kas.local.key;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  charset utf-8;
  access_log /var/log/nginx/access.log;
  error_log /var/log/nginx/error.log;
    
  location / {   
    try_files $uri $uri/ /index.php?$args;   
  }

  location ~ \.php$ {
    include snippets/fastcgi-php.conf;
    fastcgi_pass app;
  }
  
  location ~ /\.ht {

    deny all;

  }
}
